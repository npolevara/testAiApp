<h1>Dashboard</h1>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Summary Statistics</h2>
      <%= link_to "Create New Task", new_task_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-primary"><%= @total_tasks %></h3>
        <p class="card-text">Total Tasks</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-success"><%= @completed_tasks %></h3>
        <p class="card-text">Completed Tasks</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-warning"><%= @in_progress_tasks %></h3>
        <p class="card-text">In Progress Tasks</p>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>Recent Activity</h3>
    <small class="text-muted">Last 5 task updates</small>
  </div>
  <div class="card-body">
    <% if @recent_activities.present? %>
      <table class="table">
        <thead>
          <tr>
            <th>Task</th>
            <th>Action</th>
            <th>User</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_activities.each do |activity| %>
            <tr>
              <td><%= activity[:task_title] %></td>
              <td>
                <% case activity[:action] %>
                <% when 'created' %>
                  <span class="badge badge-info">Created</span>
                <% when 'completed' %>
                  <span class="badge badge-success">Completed</span>
                <% when 'updated' %>
                  <span class="badge badge-warning">Updated</span>
                <% end %>
              </td>
              <td><%= activity[:user_name] %></td>
              <td><%= activity[:timestamp].strftime("%m/%d/%Y %I:%M %p") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No recent activity found.</p>
    <% end %>
  </div>
</div>

<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    margin: -0.5rem;
  }
  .col-md-4 {
    flex: 0 0 33.333333%;
    /*padding: 0.5rem;*/
  }
  .col-md-12 {
    flex: 0 0 100%;
    padding: 0.5rem;
  }
  .card-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 0.25rem;
  }
  .card-text {
    color: #6c757d;
    margin: 0;
    font-size: 0.9rem;
  }
  .text-primary { color: #007bff !important; }
</style>
